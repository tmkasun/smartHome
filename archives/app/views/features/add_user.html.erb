<script>
	$(document).ready(function() {
		$('#user_nic_number').typeahead([{
			valueKey : 'nic_number',
			remote : '/features/search.json?search_key=%QUERY',
		}]);
	});

</script>
<h2>User Registration</h2>

<%= form_for(User.new, url: user_create_path, method: "post" ) do |f| %>

<div>
	<%= f.label :nic_number %>
	<br />
	<%= f.text_field :nic_number,autocomplete: 'off', :autofocus => true, "data-provide" => "typeahead","data-items" => "4", placeholder: "Enter a name or an index" %>
<!-- https://github.com/twitter/typeahead.js -->
</div>

<div>
	<%= f.label :password %>
	<br />
	<%= f.password_field :password %>
</div>

<div>
	<%= f.label :password_confirmation %>
	<br />
	<%= f.password_field :password_confirmation %>
</div>

<%= f.label :role,"User role" %>
<%= f.collection_select :role, User::ROLES, :to_s, :humanize %>

<div>
	<%= f.submit "Register" %>
</div>
<% end %>

