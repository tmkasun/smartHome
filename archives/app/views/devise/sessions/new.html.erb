<% content_for :head do %> <title> SH</title>
<meta name="description" content="Student information system for Batch 11 .Self learning project by B11 Group" />
<meta name="keywords" content="student information, moratuwa, batch ,registration number, phone number, gpa, " />
<% end %>

<div class="center">
	<h3 class="shadow" > Welcome to SMART HOME Net</h3>
</div>

<div class="container center" >
	<div class="row">
		<!-- text-center -->
		<div class="span6 loging_n_register_div">
			<h4 class="shadow" style="text-align: center;">Sign in</h4>

			<%= form_for resource, :as => resource_name, :url => session_path(resource_name) ,html: {class: "form-horizontal"}  do |f| %>

			<div class="control-group input-append">
				<%= f.label :nic_number, class: "control-label" %>
				<div class="controls">
					<%= f.text_field :nic_number, :autofocus => true, placeholder: "Index number" %>

					<br />
				</div>
			</div>

			<div class="control-group">

				<%= f.label :password, class: "control-label" %>
				<div class="controls">
					<div>
						<%= f.password_field :password, placeholder: "Password" %>
					</div>
				<% if devise_mapping.rememberable? -%>
					<%= f.check_box :remember_me %>
					<%= f.label :remember_me %>
				<% end %>

  
				</div>

			</div>
		
			<%= submit_tag "Log in" , class: "btn btn-primary", id: "signin"%>


			<% end %>

		</div>

	</div>
</div>

