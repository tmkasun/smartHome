<div class="jumbotron">
  <div class="container">
   <div style="margin-top: -1%;padding-left: 10%; padding-top: -10%" >
    <h4>Calculate your GPA<h4>
	             
	 <%= form_for :gpacal, url: gpa_calculate_gpa_path, method: :post do |f| %>
	   <%= f.label :level %>
	   <%= f.text_field :level ,:placeholder => "Level" %><br/>
	   
	   <%= f.label :semester %>
	   <%= f.text_field :semester  ,:placeholder => "Semester"%><br/>
	   
	   <%= f.label :no_of_subjects %>
	   <%= f.text_field :no_of_subjects ,:placeholder => "Number of Subjects" %><br/>
	   
	   <%= f.submit 'continue',:class => 'btn btn-primary'  %>
     <% end  %>	 
   </div>
 </div>
</div>
